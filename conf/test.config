/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run gongyh/nf-core-scgs -profile test
 */

params {
  // Limit resources so that this can run on Travis and CircleCI
  max_cpus = 2
  max_memory = 4.GB
  max_time = 1.h
  // Input data
  singleEnd = false
  readPaths = [
    ['E1', ["$baseDir/test-datasets/E1.1.fastq.gz", "$baseDir/test-datasets/E1.2.fastq.gz"]],
    ['E2', ["$baseDir/test-datasets/E2.1.fastq.gz", "$baseDir/test-datasets/E2.2.fastq.gz"]]
  ]
  fasta = "$baseDir/test-datasets/ATCC25922.fa"
  gff = "$baseDir/test-datasets/ATCC25922.gff"
  genus = "Escherichia"
  saveTrimmed = false
  saveAlignedIntermediates = false
  blockSize = 0.8
}

executor {
  $local {
    cpus = 2
    queueSize = 2
    memory = 4.GB
  }
}

process {

  cpus = 1
  memory = 1.GB
  time = 1.h

  maxRetries = 0
  maxErrors = '-1'

  // Environment modules and resource requirements
  withName: TRIMGALORE {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: KRAKEN {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: BOWTIE2_ALIGN {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: MINIMAP2_ALIGN {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: SAMTOOLS {
    cpus = 1
    memory = 1.5.GB
    time = 1.h
  }
  withName: INDELREALIGN {
    cpus = 2
    memory = 3.5.GB
    time = 1.h
  }
  withName: MONOVAR {
    cpus = 1
    memory = 3.GB
    time = 1.h
  }
  withName: ANEUFINDER {
    cpus = 1
    memory = 3.GB
    time = 1.h
  }
  withName: NORMALIZE {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: SPADES {
    maxForks = 1
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: blast_nt {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: diamond_uniprot {
    cpus = 1
    memory = 3.GB
    time = 1.h
  }
  withName: checkm {
    cpus = 1
    memory = 1.5.GB
    time = 1.h
  }
  withName: quast_ref {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: prokka {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: eggnog {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: resfinder {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: pointfinder {
    cpus = 2
    memory = 3.GB
    time = 1.h
  }
  withName: get_software_versions {
    memory = 1.GB
    errorStrategy = 'ignore'
  }
  withName: multiqc_ref {
    memory = 1.5.GB
  }
}
